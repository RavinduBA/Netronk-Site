---
import { actions } from "astro:actions";

const result = Astro.getActionResult(actions.newsletter);
---

<section
  id="newsletter"
  class="relative isolate mx-auto max-w-6xl overflow-hidden py-8 md:pt-8 lg:pt-16"
>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div
      class="border-primary mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border border-r-2 border-b-2 px-2 py-4 sm:max-w-4xl sm:px-4 sm:py-6 lg:max-w-none lg:grid-cols-2"
    >
      <div class="flex flex-col">
        <h3
          class="text-lg font-bold tracking-tight text-gray-700 sm:text-xl md:text-2xl"
        >
          Subscribe to our Newsletter.
        </h3>
        <p class="mt-4 text-lg leading-8 text-gray-600">
          Stay updated with the latest trends and insights. Subscribe for weekly
          articles on innovation. No spam, just valuable content delivered to
          your inbox.
        </p>
        <form
          class="mt-6 flex max-w-md gap-x-4"
          method="POST"
          action={actions.newsletter}
        >
          <label html-for="email" class="sr-only"> Email </label>
          <input
            type="email"
            name="email"
            id="email"
            class="border-primary focus:border-primary block w-full border-2 border-r-3 border-b-3 bg-transparent px-4 py-3 text-sm text-gray-800 outline-none focus:bg-transparent focus:ring-0 focus:ring-transparent"
            placeholder="Enter Your Email"
            required
          />
          <button
            type="submit"
            class="group relative inline-block px-4 py-2 font-medium"
          >
            <span
              class="bg-primary absolute inset-0 h-full w-full translate-x-1 translate-y-1 transform transition duration-200 ease-out group-hover:-translate-x-0 group-hover:-translate-y-0"
            ></span>
            <span
              class="border-primary group-hover:bg-primary absolute inset-0 h-full w-full border-2 bg-white"
            ></span>
            <span class="text-primary relative group-hover:text-white">
              Subscribe
            </span>
          </button>
        </form>
        {
          result?.error && (
            <p class="pt-4 text-sm text-red-400">
              Unable to sign up. Please try again later.
            </p>
          )
        }
        {
          result?.data?.success && (
            <p class="pt-4 text-sm text-green-500">{result.data.message}</p>
          )
        }
      </div>

      <div class="grid grid-cols-1 gap-x-8 gap-y-10 sm:grid-cols-2 lg:pt-2">
        <div
          class="flex flex-col items-start rounded-md border border-gray-200 p-2"
        >
          <div class="rounded-md bg-white/5 p-2 ring-1 ring-white/10">
            <svg
              class="text-primary size-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z"
              ></path>
            </svg>
          </div>
          <p class="mt-4 font-semibold text-gray-800 uppercase">
            Weekly articles
          </p>
          <p class="mt-2 leading-7 text-gray-600">
            Stay updated with the latest trends and insights.
          </p>
        </div>

        <div
          class="flex flex-col items-start rounded-md border border-gray-200 p-2"
        >
          <div class="rounded-md bg-white/5 p-2 ring-1 ring-white/10">
            <svg
              class="text-primary size-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M10.05 4.575a1.575 1.575 0 10-3.15 0v3m3.15-3v-1.5a1.575 1.575 0 013.15 0v1.5m-3.15 0l.075 5.925m3.075.75V4.575m0 0a1.575 1.575 0 013.15 0V15M6.9 7.575a1.575 1.575 0 10-3.15 0v8.175a6.75 6.75 0 006.75 6.75h2.018a5.25 5.25 0 003.712-1.538l1.732-1.732a5.25 5.25 0 001.538-3.712l.003-2.024a.668.668 0 01.198-.471 1.575 1.575 0 10-2.228-2.228 3.818 3.818 0 00-1.12 2.687M6.9 7.575V12m6.27 4.318A4.49 4.49 0 0116.35 15m.002 0h-.002"
              ></path>
            </svg>
          </div>
          <p class="mt-4 font-semibold text-gray-800 uppercase">No spam</p>
          <p class="mt-2 leading-7 text-gray-600">
            No marketing noise. Just Netronk blog posts, curated for your inbox.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
