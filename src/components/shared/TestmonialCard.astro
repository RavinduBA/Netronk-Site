---
import { Image } from "astro:assets";

const { quote, author, position, avatar } = Astro.props;
---

<div class="container">
  <figure class="mx-auto max-w-screen-md">
    <svg
      class="mx-auto mb-3 h-12 text-gray-600"
      viewBox="0 0 24 27"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z"
        fill="currentColor"></path>
    </svg>
    <blockquote>
      <p class="quote">
        {quote}
      </p>
    </blockquote>
    <figcaption class="caption">
      <Image
        class="size-6 rounded-full"
        width="300"
        height="300"
        src={avatar}
        alt="dummy avatar"
        class="h-12 w-12 rounded-full"
      />
      <div class="author">
        <p class="author">
          {author}
        </p>
        <p class="position">
          {position}
        </p>
      </div>
    </figcaption>
  </figure>
</div>

<style lang="postcss">
  @reference "~styles/global.css";
  div.container {
    @apply w-full px-4 py-2 mx-auto text-center lg:px-6;
  }

  div.author {
    @apply flex items-center divide-x-2 divide-gray-700;
  }

  p.quote {
    @apply text-xl md:text-2xl font-medium text-gray-900;
  }
  p.author {
    @apply pr-3 font-medium text-black;
  }

  p.position {
    @apply pl-3 text-sm font-light text-gray-800;
  }

  figcaption.caption {
    @apply flex items-center justify-center mt-6 space-x-3;
  }
</style>
